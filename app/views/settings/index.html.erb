<div class="container mt-4 text-white">
  <h2>⚙️ Account Settings</h2>

  <!-- Update Profile -->
  <div class="card bg-dark border-light shadow-sm mt-3">
    <div class="card-header">Update Profile</div>
    <div class="card-body">
      <%= form_with scope: :user, url: settings_update_profile_path, method: :patch, local: true do |f| %>

        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <%= f.submit "Update Profile", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

  <!-- Change Password -->
  <div class="card bg-dark border-light shadow-sm mt-4">
    <div class="card-header">Change Password</div>
    <div class="card-body">
      <%= form_with url: settings_update_password_path, method: :patch, local: true do |f| %>
        <div class="mb-3">
          <%= label_tag :current_password, "Current Password", class: "form-label" %>
          <%= password_field_tag :current_password, nil, name: 'user[current_password]', class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= label_tag :password, "New Password", class: "form-label" %>
          <%= password_field_tag :password, nil, name: 'user[password]', class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= label_tag :password_confirmation, "Confirm New Password", class: "form-label" %>
          <%= password_field_tag :password_confirmation, nil, name: 'user[password_confirmation]', class: "form-control" %>
        </div>
        <%= f.submit "Update Password", class: "btn btn-warning" %>
      <% end %>
    </div>
  </div>

  <!-- Preferences -->
  <div class="card bg-dark border-light shadow-sm mt-4">
    <div class="card-header">Preferences</div>
    <div class="card-body">
      <%= form_with url: settings_update_preferences_path, method: :patch, local: true do |f| %>
        <div class="mb-3">
          <%= label_tag :dark_mode, "Enable Dark Mode", class: "form-label" %>
          <%= check_box_tag :dark_mode, "1", true, name: "preferences[dark_mode]", class: "form-check-input" %>
        </div>
        <%= f.submit "Save Preferences", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
