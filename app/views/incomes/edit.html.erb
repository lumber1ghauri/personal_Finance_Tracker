<% content_for :title, "Editing income" %>

<div class="min-h-screen bg-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="md:grid md:grid-cols-3 md:gap-6">
      <div class="md:col-span-1">
        <div class="px-4 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Edit Income</h3>
          <p class="mt-1 text-sm text-gray-600">
            Update the income entry details. All fields are required.
          </p>
        </div>
      </div>

      <div class="mt-5 md:mt-0 md:col-span-2">
        <%= form_with(model: @income, class: "space-y-6") do |form| %>
          <div class="shadow sm:rounded-md sm:overflow-hidden">
            <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
              <% if @income.errors.any? %>
                <div class="rounded-md bg-red-50 p-4">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <h3 class="text-sm font-medium text-red-800">
                        <%= pluralize(@income.errors.count, "error") %> prohibited this income from being saved:
                      </h3>
                      <div class="mt-2 text-sm text-red-700">
                        <ul class="list-disc pl-5 space-y-1">
                          <% @income.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                          <% end %>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>

              <div>
                <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= form.text_field :description, class: "shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
                <p class="mt-2 text-sm text-gray-500">A brief description of the income source.</p>
              </div>

              <div>
                <%= form.label :amount, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1 relative rounded-md shadow-sm">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <span class="text-gray-500 sm:text-sm">$</span>
                  </div>
                  <%= form.number_field :amount, step: "0.01", class: "focus:ring-green-500 focus:border-green-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md" %>
                </div>
                <p class="mt-2 text-sm text-gray-500">The amount of income received.</p>
              </div>

              <div>
                <%= form.label :category, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= form.text_field :category, class: "shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
                <p class="mt-2 text-sm text-gray-500">The category of this income (e.g., Salary, Freelance, etc.).</p>
              </div>

              <div>
                <%= form.label :date, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= form.date_field :date, class: "shadow-sm focus:ring-green-500 focus:border-green-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                </div>
                <p class="mt-2 text-sm text-gray-500">The date when the income was received.</p>
              </div>
            </div>

            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
              <%= link_to "Cancel", incomes_path, class: "mr-3 inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
              <%= form.submit "Update Income", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<br>

<div>
  <%= link_to "Show this income", @income %> |
  <%= link_to "Back to incomes", incomes_path %>
</div>
